node("ci-node") {
    stage("checkout") {
        checkout([$class: 'GitSCM', branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/mchekini-check-consulting/famille-ui.git']]])
    }
    
    stage("build"){
        sh "npm install"
        sh "ng build --configuration production"
    }

    stage("build docker image"){
           sh "sudo docker build -t famille-ui-qua ."
    }

    stage("push image to docker hub"){
        sh "sudo docker login -u mchekini -p jskabyliE"
        sh "sudo docker tag famille-ui-qua mchekini/famille-ui-qua:1.0"
        sh "sudo docker push mchekini/famille-ui-qua:1.0 "
    }

    node("qualif-node"){
        stage("deploy"){
            try{
                sh "sudo docker stop famille-ui"
                sh "sudo docker rm famille-ui"
                sh "sudo docker rmi mchekini/famille-ui-qua:1.0"
            }catch(Exception e){
                println "Aucun conteneur avec le nom famille-ui n'est pr√©sent"
            }
            sh "sudo docker run --name famille-ui -p 81:80 mchekini/famille-ui-qua:1.0"
        }
    }
}